{
    "compilerOptions": {
        "lib": ["es2015","dom"],
        "outDir": "./build",
        "allowJs": true,
        "target": "es6",
        "experimentalDecorators": true,
        "importHelpers": true,
        "strict": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true
    },
    "include": [
        "./src/**/*"
    ]
}
